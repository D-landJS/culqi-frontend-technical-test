{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:vue/vue3-essential",
		"@vue/typescript/recommended",
		"@vue/eslint-config-standard-with-typescript/allow-ts-in-vue"
	],
	"parserOptions": {
		"project": "./tsconfig.json",
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["vue"],
	"rules": {
		"semi": ["error", "always"]
	}
}
